@{ Layout = "_LayoutAdminLTE"; }
<!DOCTYPE html>
<html lang="en">
<body>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <center>
                    <h1 style="margin-bottom: 2%; text-align:center;">Data Employee</h1>
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-success" style="float: right; margin-bottom: 2%;" data-toggle="modal" data-target="#createData">
                        Add Employee
                    </button>
                </center>
            </div>
        </div>
    </div>

    <table class="table table-striped table-hover col-md-10" id="detailEmployee_tb" style="align-content:center; margin-left:16px; margin-right: 32px;">
        <thead class="table-dark text-center">
            <tr style="text-align: center">
                <th scope="col" width="3%">No</th>
                <th scope="col" width="10%">NIK</th>
                <th scope="col" width="17%">Full Name</th>
                <th scope="col" width="17%">Phone</th>
                <th scope="col" width="10%">BirthDate</th>
                <th scope="col" width="10%">Salary</th>
                <th scope="col" width="17%">Email</th>
                <th scope="col" width="3%">Universitas</th>
                <th scope="col" width="3%">Degree</th>
                <th scope="col" width="10%">Action</th>
            </tr>
        </thead>
        <tbody id="tableEmployee" style="width: fit-content; align-content:center; margin-left:80px; margin-right: 32px;">
        </tbody>
    </table>
    <!-- Modal new data-->
    <div class="modal fade " id="createData" tabindex="-1" role="dialog" aria-labelledby="createData" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createData">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="m-t-10" id="form-isian">
                        <div class="row">
                            <div class="form-group col-md-4">
                                <h5>First Name<span class="text-danger">*</span></h5>
                                <div class="controls">
                                    <input type="text" id="firstName" class="form-control" required data-validation-required-message="Isian Ini Wajib!">
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <h5>Last Name<span class="text-danger">*</span></h5>
                                <div class="controls">
                                    <input type="text" id="lastName" class="form-control" required data-validation-required-message="Isian Ini Wajib!">
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <h5>Phone <span class="text-danger">*</span></h5>
                                <div class="controls">
                                    <input type="number" id="phone" class="form-control">
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <h5>Tanggal Lahir <span class="text-danger">*</span></h5>
                                <div class="controls">
                                    <input type="date" id="BirthDate" class="form-control" required data-validation-required-message="Isian Ini Wajib!">
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <h5>Salary<span class="text-danger">*</span></h5>
                                <div class="controls">
                                    <input type="number" id="salary" class="form-control" required data-validation-required-message="Isian Ini Wajib!">
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <h5>Email <span class="text-danger">*</span></h5>
                                <div class="controls">
                                    <input type="email" id="email" class="form-control" required data-validation-required-message="Isian Ini Wajib!">
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <h5>Gender <span class="text-danger">*</span></h5>
                                <div class="controls">
                                    <input type="text" id="gender" class="form-control" required data-validation-required-message="Isian Ini Wajib!">
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <h5>Password <span class="text-danger">*</span></h5>
                                <div class="controls">
                                    <input type="password" id="password" class="form-control" required data-validation-required-message="Isian Ini Wajib!">
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <h5>Degree<span class="text-danger">*</span></h5>
                                <div class="controls">
                                    <select class="form-control input-group-sm" id="degree">
                                        <option value="D3">D3</option>
                                        <option value="S1">S1</option>
                                        <option value="S2">S2</option>
                                        <option value="S3">S3</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <h5>GPA<span class="text-danger">*</span></h5>
                                <div class="controls">
                                    <input type="number" id="gpa" class="form-control" required data-validation-required-message="Isian Ini Wajib!">
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <label>University</label>
                                <select class="form-control" id="inputUniv">
                                    <option value="" disabled selected>Select University</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-info btn-sm" onclick="Insert()">Save</button>
                    <button type="button" class="btn btn-inverse" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    @*modal*@
    <!-- Modal detail-->
    <div class="modal fade" id="detailEmployee" tabindex="-1" role="dialog" aria-labelledby="detailEmployee" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="detailEmployee">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal edit data-->
    <div class="modal fade" id="editEmployee" tabindex="-1" role="dialog" aria-labelledby="editEmployee" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editEmployee">Edit Data Employee</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="modal-body">
                        <form class="m-t-10" id="form-edit">
                            <div class="row">
                                <div class="form-group col-md-4">
                                    <h5>NIK<span class=""></span></h5>
                                    <div class="controls" id="updateNIK">

                                    </div>
                                </div>
                                <div class="form-group col-md-4">
                                    <h5>First Name <span></span></h5>
                                    <div class="controls" id="updateFirstName">

                                    </div>
                                </div>
                                <div class="form-group col-md-4">
                                    <h5>Last Name <span></span></h5>
                                    <div class="controls" id="updateLastName">

                                    </div>
                                </div>
                                <div class="form-group col-md-4">
                                    <h5>Phone <span></span></h5>
                                    <div class="controls" id="updatePhone">

                                    </div>
                                </div>
                                <div class="form-group col-md-4">
                                    <h5>Gender <span></span></h5>
                                    <div class="controls" id="udpateGender">

                                    </div>
                                </div>
                                <div class="form-group col-md-4">
                                    <h5>Tanggal Lahir <span></span></h5>
                                    <div class="controls" id="updateBirthDate">

                                    </div>
                                </div>
                                <div class="form-group col-md-4">
                                    <h5>Salary<span></span></h5>
                                    <div class="controls" id="updateSalary">

                                    </div>
                                </div>
                                <div class="form-group col-md-4">
                                    <h5>Email <span></span></h5>
                                    <div class="controls" id="updateEmail">

                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-info btn-sm" onclick="saveUpdate()">Save</button>
                        <button type="button" class="btn btn-inverse" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>

        </div>

    </div>

    <!-- Modal delete-->

    <div class="modal fade bd-example-modal-sm" id="" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                ...
            </div>
        </div>
    </div>
</body>
</html>
